{
  "name": "notewriter",
  "version": "2.0.1",
  "description": "Offline version of notewriter.tech",
  "main": "js/main.js",
  "author": {
    "name": "Silvio Santoriello",
    "email": "dev.silviosanto6605@gmail.com"
  },
  "maintainers": [
    "Silvio Santoriello"
  ],
  "license": "GPL-3.0",
  "homepage": "notewriter.tech",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder build --publish always",
    "build-no-release": "electron-builder build --publish never",
    "build-linux": "electron-builder --linux deb",
    "build-win": "electron-builder --win"
  },
  "devDependencies": {
    "electron": "^13.1.2",
    "electron-builder": "^22.11.7"
  },
  "build": {
    "appId": "notewriter",
    "publish": "github",
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "build/icons/icon.png"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "electron-prompt": "^1.6.2",
    "latest-version": "^5.1.0"
  }
}
